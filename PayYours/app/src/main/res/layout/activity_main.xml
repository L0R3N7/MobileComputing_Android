<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="4"
    android:columnOrderPreserved="false"
    android:orientation="vertical"
    android:rowCount="3"
    android:useDefaultMargins="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:text="PlÃ¤tze:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/editTextCourts"
        android:layout_width="85dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnAddCourts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:text="+"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        />

    <Button
        android:id="@+id/btnRemoveCourts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="3"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="right|center_vertical"
        android:text="Spieler:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/editTextPlayer"
        android:layout_width="85dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/btnAddPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:text="+"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        />

    <Button
        android:id="@+id/btnRemovePlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="3"
        android:text="-"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="top"
        android:layout_row="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text="Betrag:"
        />
    <TextView
        android:id="@+id/tvAmountToPay"
        android:layout_width="110dp"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="2"
        android:gravity="fill"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:text=""
        />
</GridLayout>

